        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1">
          <% for(listing of allListing) {%>
            <a href="/listings/<%= listing.id %>" class="listing-link">
            <div class="card col listing-card listing-card-p">
              <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
              <div class="card-img-overlay"></div>
              <div class="card-body">
                <p class="card-text">
                 <b><%=listing.title%></b> <br>
                  &#x20B9; <%=listing.price.toLocaleString("en-IN")%>/night
                  <i class="tax-info"> +18% GST</i>
                </p>
              </div>
            </div>
          </a>
            <% } %>
        </div>
      
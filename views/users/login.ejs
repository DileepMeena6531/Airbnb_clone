<% layout('layouts/boilerplate') -%>

    <div class="row mt-3 col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <h3>LogIn your Wanderlust!</h3>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" placeholder="enter your name" id="username" required>
                <div class="valid-feedback">Looks good!</div>
              </div>

              <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="12345678" required>
              </div>
              <button class="btn btn-dark">LogIn</button>
        </form>
    </div>